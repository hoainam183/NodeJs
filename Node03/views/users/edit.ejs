<h1>Sua nguoi dung</h1>

<form action="" method="post" class="w-50">
  <div class="mb-3">
    <label for="">Ten</label>
    <input
      type="text"
      name="name"
      class="form-control"
      placeholder="Ten..."
      value="<%= user.name %>"
    />
  </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      class="form-control"
      placeholder="Email..."
      value="<%= user.email %>"
    />
  </div>
  <div class="mb-3">
    <label for="">Trang thai</label>
    <select name="status" class="form-select">
      <option value="0" <%= user.status === 0 ? 'selected' : '' %>>Chua kich hoat</option>
      <option value="1" <%= user.status === 1 ? 'selected' : '' %>>Kich hoat</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="">Khoa hoc</label>
    <% courses.forEach(course => { %>
    <label class="d-block mb-2">
      <input type="checkbox" name="courses" value="<%= course.id %>" <%=
      user.courses.some(user_course => user_course.id === course.id) ? 'checked'
      : '' %>/> <%= course.name %>
    </label>
    <% }) %>
  </div>
  <button class="btn btn-success">Luu</button>
  <a href="/users" class="btn btn-danger">Huy</a>
</form>
