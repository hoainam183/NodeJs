<h1>Sua nguoi dung</h1>
<% if (msg) { %>
  <div class="alert alert-success mt-2"><%= msg %></div>
<% } %>
<form action="" method="post">
    <div class="mb-3">
        <label for="">Ten</label>
        <input
          type="text"
          name="name"
          class="form-control"
          placeholder="Name..."
          value= "<%= req.old.name %>"
        />
        <span class="text-danger"><%= req.errors.name %></span>
      </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      class="form-control"
      placeholder="Email..."
      value="<%= req.old.email %>"
    />
    <span class="text-danger"><%= req.errors.email %></span>

  </div>
  <form action="" method="post">
    <div class="mb-3">
        <label for="">Trang thai</label>
      <select name="status" class="form-select">
        <option value="0" <%= +req.old.status === 0 ? 'selected' : '' %>>Chua kich hoat</option>
        <option value="1" <%= +req.old.status === 1 ? 'selected' : '' %>>Kich hoat</option>
      </select>
    <span class="text-danger"><%= req.errors.status %></span>

    </div>
    <button class="btn btn-primary">Luu</button>
    <a href="/users" class="btn btn-danger">Huy</a>
</form>
